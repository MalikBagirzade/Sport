@model Instructor

<section class="section" id="call-to-action">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="cta-content text-white">
                    <h2>Create Instructor</h2>

                    <form asp-action="Create">
                        <div class="form-group  ">
                            <label asp-for="PhotoUrl" class="control-label"></label>
                            <input asp-for="PhotoUrl" class="form-control" />
                            <span asp-validation-for="PhotoUrl" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="FullName" class="control-label"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Bio" class="control-label"></label>
                            <input asp-for="Bio" class="form-control" />
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Specialty" class="control-label"></label>
                            <input asp-for="Specialty" class="form-control" />
                            <span asp-validation-for="Specialty" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="FacebookUrl" class="control-label"></label>
                            <input asp-for="FacebookUrl" class="form-control" />
                            <span asp-validation-for="FacebookUrl" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="InstagramUrl" class="control-label"></label>
                            <input asp-for="InstagramUrl" class="form-control" />
                            <span asp-validation-for="InstagramUrl" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="LinkedinUrl" class="control-label"></label>
                            <input asp-for="LinkedinUrl" class="form-control" />
                            <span asp-validation-for="LinkedinUrl" class="text-danger"></span>
                        </div>

                        <!-- InstructorMemberships için bir form alanı eklemek istiyorsanız buraya ekleyebilirsiniz -->

                        <button type="submit" class="btn btn-primary">Create</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>
